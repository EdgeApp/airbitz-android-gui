<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#ccffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bluetooth_item_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:background="@drawable/ble_icon"/>

    <ImageView
        android:id="@+id/bluetooth_item_rssi_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:background="@drawable/five_bars"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12.6dp">

        <TextView
            android:id="@+id/bluetooth_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/bluetooth_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>
