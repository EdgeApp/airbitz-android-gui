<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/action_button"
        android:layout_height="@dimen/action_button_size"
        android:layout_width="@dimen/action_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/action_button_margin"
        android:layout_marginBottom="@dimen/action_button_margin_bottom"
        android:background="@drawable/button_action_selector"
        android:visibility="invisible">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_add_black" />

    </FrameLayout>
</merge>
